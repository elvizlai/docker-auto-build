         avio_wb32(pb, size + flags_size + 11); // previous tag size
         flv->duration = FFMAX(flv->duration,
@@ -1106,7 +1132,8 @@ static int flv_write_packet(AVFormatContext *s, AVPacket *pkt)
         }
     }
 fail:
